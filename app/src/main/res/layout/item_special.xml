<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/item_special_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/placeholder_picture_description"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/item_special_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/placeholder_name"/>

    <TextView
      android:id="@+id/item_special_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/placeholder_price"/>
  </LinearLayout>

  <TextView
    android:id="@+id/item_special_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:maxLines="3"
    android:text="@string/placeholder_description"/>
</RelativeLayout>
